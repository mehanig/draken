{
  "name": "draken",
  "version": "1.0.0",
  "description": "Local web-based dashboard for managing Claude Code projects in Docker containers",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/server.js",
    "dev": "tsc -w",
    "dev:client": "cd client && npm run dev",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^11.7.0",
    "dockerode": "^4.0.4",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.3",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.12",
    "@types/dockerode": "^3.3.34",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  }
}
